		authorities="ROLE_ADMIN" />
		</security:user-service>
		</security:authentication-provider>

		</security:authentication-manager>

	-->
	
	<!-- 对密码进行MD5编码 -->
	<bean
		class="org.springframework.security.authentication.encoding.Md5PasswordEncoder"
		id="passwordEncoder" />

	<!-- 通过 DBUserService,Spring会自动的用户的访问级别 -->
	<bean
		id="dbUserService"
		class="qq.security.service.DBUserDetailsService" />
 
 
	<!-- 指定一个自定义的authentication-manager :dbUserService -->
	<security:authentication-manager>
		<security:authentication-provider
			user-service-ref='dbUserService'>


			<security:password-encoder ref="passwordEncoder" />
		</security:authentication-provider>
	</security:authentication-manager>

	

	<!-- 国际化 -->
	<bean
		id="messageSource"
		class="org.springframework.context.support.ReloadableResourceBundleMessageSource">

		<property
			name="defaultEncoding"
			value="utf-8" />

		<property
			name="basename"
			value="classpath:org/springframework/security/messages_zh_CN" />
		<!-- <property name="basename" value=" classpath*:/messages_zh_CN" /> -->

	</bean>
</beans>


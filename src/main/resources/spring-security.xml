	<security:http
		security="none"
		pattern="/auth/login*" />

	<security:http
		auto-config="true"
		access-denied-page="/error/deny">

		<security:form-login
			login-page="/auth/login"
			default-target-url="/book/list" />

		<security:logout
			invalidate-session="true"
			logout-success-url="/auth/login"
			logout-url="/auth/logout" />

		<security:intercept-url
			pattern="/book/update"
			access="ROLE_USER" />

		<security:intercept-url
			pattern="/book/add"
			access="ROLE_ADMIN" />

		<security:intercept-url
			pattern="/book/list"
			access="ROLE_ADMIN,ROLE_USER" />


		<!-- 会话同步 -->
		<security:session-management
			invalid-session-url="/seesoinTimeout.html">
			<security:concurrency-control
				max-sessions="1"
				error-if-maximum-exceeded="true" />
		</security:session-management>

	</security:http>

